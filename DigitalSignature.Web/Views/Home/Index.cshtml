@using DigitalSignature.Core.Algorithms.Asymmetric
@using DigitalSignature.Core.Algorithms.Hash
@using DigitalSignature.Core.Algorithms.Symmetric
@model DigitalSignature.Web.Controllers.InputViewModel
@{
    ViewBag.Title = "Home Page";
}


@using (Html.BeginForm("Generate", "Home", FormMethod.Post))
{
    <div class="row clearfix" style="margin-top: 10px;">
        <div class="col-sm-12">
            <div class="form-group form-float">
                <div class="form-line">
                    @Html.LabelFor(model => model.InputText)
                    @Html.TextBoxFor(model => model.InputText, new { @class = "form-control" })
                </div>
            </div>
        </div>
    </div>
    <div class="row clearfix" style="margin-top: 10px;">
        <div class="col-sm-12">
            <div class="form-group form-float">
                <div class="form-line">
                    @Html.LabelFor(model => model.SelectedAsymmetricAlgorithmName)
                    @Html.EnumDropDownListFor(model => model.SelectedAsymmetricAlgorithmName, new { @class = "form-control" })
                </div>
            </div>
        </div>
    </div>
    <div class="row clearfix" style="margin-top: 10px;">
        <div class="col-sm-12">
            <div class="form-group form-float">
                <div class="form-line">
                    @Html.LabelFor(model => model.SelectedAsymmetricAlgorithmKey)
                    @Html.EnumDropDownListFor(model => model.SelectedAsymmetricAlgorithmKey, new { @class = "form-control" })
                </div>
            </div>
        </div>
    </div>
    <div class="row clearfix" style="margin-top: 10px;">
        <div class="col-sm-12">
            <div class="form-group form-float">
                <div class="form-line">
                    @Html.LabelFor(model => model.SelectedSymmetricAlgorithmName)
                    @Html.EnumDropDownListFor(model => model.SelectedSymmetricAlgorithmName, new { @class = "form-control" })
                </div>
            </div>
        </div>
    </div>
    <div class="row clearfix" style="margin-top: 10px;">
        <div class="col-sm-12">
            <div class="form-group form-float">
                <div class="form-line">
                    @Html.LabelFor(model => model.SelectedSymmetricAlgorithmKey)
                    @Html.EnumDropDownListFor(model => model.SelectedSymmetricAlgorithmKey, new { @class = "form-control" })
                </div>
            </div>
        </div>
    </div>
    <div class="row clearfix" style="margin-top: 10px;">
        <div class="col-sm-12">
            <div class="form-group form-float">
                <div class="form-line">
                    @Html.LabelFor(model => model.SelectedSymmetricAlgorithmMode)
                    @Html.EnumDropDownListFor(model => model.SelectedSymmetricAlgorithmMode, new { @class = "form-control" })
                </div>
            </div>
        </div>
    </div>
    <div class="row clearfix" style="margin-top: 10px;">
        <div class="col-sm-12">
            <div class="form-group form-float">
                <div class="form-line">
                    @Html.LabelFor(model => model.SelectedHashAlgorithmName)
                    @Html.EnumDropDownListFor(model => model.SelectedHashAlgorithmName, new { @class = "form-control" })
                </div>
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-default">Submit</button>

}
